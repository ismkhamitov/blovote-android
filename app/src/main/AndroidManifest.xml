<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blovote">

    <application
        android:name=".app.App"
        android:allowBackup="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".app.wizard.WizardActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".surveys.ui.creation.CreateSurveyActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>

        <activity android:name=".surveys.ui.passing.SurveyActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".surveys.ui.monitoring.MySurveyActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".surveys.ui.MainSurveysActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".surveys.ui.monitoring.AnswersActivity"
            android:screenOrientation="portrait"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>